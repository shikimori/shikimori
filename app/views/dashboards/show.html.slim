- content_for :head do
  = auto_discovery_link_tag :rss, news_feed_pages_url(format: :rss), title: 'Shiki News'

.midheadline
  = t '.currently_airing'
  / a.b-link[
    / href="#{animes_url}"
    / title="#{t '.all_animess'}"
  / ] = t '.mangas'

.cc-ongoings.to-process data-dynamic="cutted_covers"
  = render @view.ongoings,
    cover_notice: :studio,
    content_by: :mini_tooltip

.cc-second
  .cc-inner
    .c-content
      .options
        .option.selected = t '.reviews'
        .option = t '.animes'
        .option = t '.mangas'
        / .option = t '.other'

      .slides
        .slide.reviews
          .midheadline.magenta
            h2 = t '.reviews'
            a.b-link[
              href="#{forum_topics_url :reviews}"
              title="#{t '.all_reviews'}"
            ] = t '.all_reviews'
          div
            = render partial: 'topics/topic',
              collection: @view.reviews,
              as: :topic_view

        .slide.animes.hidden
          = render 'dashboards/animes'

        .slide.mangas.hidden
          = render 'dashboards/mangas'

        / .slide.hidden
          / .midheadline: h2 = t '.other'
          / ul.b-list
            / - @view.pages.each_with_index do |(url, title), index|
              / li
                / - if index < DashboardView::SPECIAL_PAGES
                  / a.b-link[
                    / href="#{url}"
                    / data-no-turbolink="true"
                    / title="#{title}"
                  / ] = title
                / - else
                  / a.b-link href="#{url}" title="#{title}" = title

    .c-my_list
      - if user_signed_in?
        .user_list
          = render 'dashboards/user_list', view: @view

      - else
        .sign_in
          = render 'devise/sessions/form', resource: User.new

  .c-forum
    .b-forums
      a.b-link_button.maxi.dark href="#{forum_url}" = t 'forum'
      .block
        - @view.forums.each do |forum|
          .forum
            .topics #{forum.size} #{i18n_i 'topic', forum.size}
            .link-with-input
              a.link href="#{forum.url}" = forum.name

    - if @view.contests.any?
      .contests.block
        .midheadline.green.m5
          h2 = t '.contests'
          a.b-link[
            href="#{contests_url}"
            title="#{t '.all_contests'}"
          ] = t '.all_contests'
        .block
          = render 'dashboards/contests', collection: @view.contests

.cc-news
  .c-news_topics.m0
    .midheadline.orange
      h2 = t '.news_feed'
      a.b-link[
        href="#{forum_topics_url :news}"
        title="#{t '.all_news'}"
      ] = t '.all_news'

    div
      = render partial: 'topics/topic',
        collection: @view.news_topics,
        as: :topic_view

      - if @view.news_topics.next_page
        = render 'blocks/postloader',
          filter: 'b-topic',
          next_url: root_page_url(page: @view.news_topics.next_page)

  .c-generated_news
    = render 'sponsors/ad', ad: Ad.new(300, 250), obtrusive: true

    / .midheadline.gray.m15 = t 'sponsors'
    / .container
      / / - if Rails.env.production?
        / / = render 'dashboards/ad'
      / / - else
      / div style="width: 240px; height: 400px; margin: 0 auto; background: #ddd; border: 1px solid #aaa;" &nbsp;AD

    .midheadline.yellow
      = t '.anime_updates'
      a.b-link[
        href="#{forum_topics_url :updates}"
        title="#{t '.all_updates'}"
      ] = t '.all_updates'
    div
      = render partial: 'topics/topic',
        collection: @view.generated_news,
        as: :topic_view
